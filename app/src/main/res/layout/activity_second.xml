<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/send_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_header"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/border_margin_top"
        android:layout_marginStart="@dimen/border_margin_start"/>

    <TextView
        android:id="@+id/send_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/send_text_header"
        app:layout_constraintLeft_toLeftOf="@id/send_text_header"
        android:layout_marginTop="@dimen/text_body_spacing"
        android:layout_marginStart="@dimen/text_body_indent" />

    <Button
        android:id="@+id/reply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reply_btn_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/border_margin_bottom"
        android:layout_marginEnd="@dimen/border_margin_end"/>

    <EditText
        android:id="@+id/reply_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border_margin_bottom"
        android:hint="@string/reply_text_hint"
        android:ems="13"
        android:inputType="text"
        android:minHeight="@dimen/edit_text_min_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/reply_button"
        android:importantForAutofill="no" />
</androidx.constraintlayout.widget.ConstraintLayout>
